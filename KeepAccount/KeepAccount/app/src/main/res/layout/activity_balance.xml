<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/balancebg"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/balance_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp">

        <TextView
            android:id="@+id/balance_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月支出"
            android:textColor="@color/green"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/balance_expend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance_tv1"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:text=" ￥ 0"
            android:textColor="@color/green2"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/balance_search"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/balance_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_expend"
            android:layout_marginTop="7dp"
            android:text="本月收入"
            android:textColor="@color/green"

            android:textSize="15dp"/>

        <TextView
            android:id="@+id/balance_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_expend"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/balance_tv2"
            android:text=" ￥ 0"
            android:textColor="@color/green2"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/balance_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_expend"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:text=" ￥ 0"
            android:textColor="@color/green2"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/balance_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_expend"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@id/balance_budget"
            android:text="预算剩余"
            android:layout_marginLeft="7dp"
            android:textColor="@color/green"

            android:textSize="15dp"/>

    </RelativeLayout>

</LinearLayout>