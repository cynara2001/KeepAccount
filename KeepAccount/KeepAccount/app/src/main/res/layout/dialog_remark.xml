<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_remark_tv"
        android:text="添加备注"
        android:textColor="@color/white"
        android:background="@color/green"
        android:textSize="22dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:id="@+id/dialog_remark_et"
        android:hint="请输入备注内容"
        android:textSize="18dp"
        android:layout_below="@+id/dialog_remark_tv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <requestFocus/>
    </EditText>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_remark_et"
        android:padding="5dp">

        <Button
            android:id="@+id/dialog_remark_btn_ensure"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/dialog_remark_btn_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

</RelativeLayout>