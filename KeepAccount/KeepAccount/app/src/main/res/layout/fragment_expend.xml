<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/frag_keep_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="7dp">
        <ImageView
            android:id="@+id/frag_keep_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/other1" />
        <TextView
            android:id="@+id/frag_keep_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:layout_toRightOf="@id/frag_keep_iv"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/green2"/>
        <EditText
            android:id="@+id/frag_keep_et_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:background="@color/white" />
    </RelativeLayout>
    <View
        android:id="@+id/frag_keep_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/frag_keep_rl_top"
        android:background="@color/green"/>
    <GridView
        android:id="@+id/frag_keep_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_keep_line1"
        android:background="@color/white"
        android:numColumns="5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <!-- 自定义软键盘 -->
    <android.inputmethodservice.KeyboardView
        android:id="@+id/frag_keep_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyBackground="@color/green"
        android:keyTextColor="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:shadowColor="@color/green"

        android:shadowRadius="0.0"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_above="@id/frag_keep_keyboard">
        <TextView
            android:id="@+id/frag_keep_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021年3月8日 0:00"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:padding="7dp"/>
        <TextView
            android:id="@+id/frag_keep_tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="添加备注"
            android:layout_toLeftOf="@id/frag_keep_tv_time"
            android:padding="7dp"/>

    </RelativeLayout>


</RelativeLayout>